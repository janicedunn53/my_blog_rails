<h1>Posts with the tag "<%= @tag.description %>"</h1>

<% @tag.posts.each do |post| %>
  <%= link_to post.title, post_path(post) %>
<% end %>

<p><%= link_to "Edit Tag", edit_tag_path(@tag) %></p>
<p><%= link_to "Delete tag", tag_path(@tag), :data => {:confirm => "Are you sure you want to delete this tag?", :method => "delete"} %></p>

<hr>

<%= link_to "Back to Homepage", posts_path %>
