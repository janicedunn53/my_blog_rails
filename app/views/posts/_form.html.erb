<%= render 'layouts/errors', :object => @post %>

<%= form_for @post do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>
  <p><%= f.label :date %>
  <%= f.date_field :date %></p>
  <p><%= f.label :content %>
  <%= f.text_area :content %></p>

  <strong>Add Tags:</strong><br>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :description) do |b| %>
      <%= b.label { b.check_box } %>
      <%= b.object.description %>
    <% end %>

  <%= f.submit %>
<% end %>
