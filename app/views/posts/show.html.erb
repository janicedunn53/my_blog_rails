<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<p><%= link_to "Edit", edit_post_path(@post) %></p>
<p><%= link_to "Delete", post_path(@post), :data => {:confirm => "Are you sure you want to delete this post?", :method => "delete"} %></p>
<p><%= link_to "Return to Homepage", posts_path %></p>
